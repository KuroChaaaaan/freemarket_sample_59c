      .main-header__inner__bottom__right__block-logged-in
        %ul.lists-logged-in
          %li.list.liked
            =link_to "#", class: "flex" do
              = fa_icon "heart"
              .text いいね！一覧
          %li.list.notification
            =link_to "#", class: "flex" do
              = image_tag "bell-icon.svg", class: "bell"
              .text お知らせ
          %li.list.todo
            =link_to "#", class: "flex" do
              =fa_icon "check"
              .text やることリスト
