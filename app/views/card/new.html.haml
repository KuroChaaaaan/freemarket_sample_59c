= render "shared/main-header"
.mypage
  = render "users/side_bar"
  %section.card-register
    %main.single-main
      .l-single-container
        %h2.l-chapter-head クレジットカード登録
        #add-card-form.l-single-inner.registration-form
          = form_tag(pay_cards_path, method: :post, id: 'charge-form', name: "inputForm") do
            %input{name: "__csrf_value", type: "hidden", value: ""}
            .l-single-content
              .form-group
                %label{for: "payment_card_no"} カード番号
                %span.form-require 必須
                = text_field_tag "number", "", class: "input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %ul#card-no-error-wrapper.has-error-text
                %ul.signup-card-list
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2561606804', size: '20x49', class: ''
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2561606804', size: '20x34'
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2561606804', size: '20x30'
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2561606804', size: '20x32'
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2561606804', size: '20x21'
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2561606804', size: '20x32'
                  %li
                    = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2561606804', size: '20x32'
              .form-group.signup-form-expire
                %label{for: "payment_card_expire"} 有効期限
                %span.form-require 必須
                %br
                .select-wrap.half
                  %select#exp_month.select-default{name: "exp_month", type: "text"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.icon-arrow-bottom
                  %span 月
                .select-wrap.half
                  %select#exp_year.select-default{name:"exp_year", type:"text"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %i.icon-arrow-bottom
                  %span 年
                %ul#expire-mm-error-wrapper.has-error-text
                %ul#expire-yy-error-wrapper.has-error-text
              .form-group
                %label{for: "payment_card_security_code"}
                  セキュリティコード
                  = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc", class:"input-default"
                  %ul#security-code-error-wrapper.has-error-text
                    .signup-seqcode
                      .signup-seqcode-text{"data-js": "show-tips-toggle"}
                        %span.form-question
                        = fa_icon "question-circle"
                        カード裏面の番号とは？
                      .signup-seqcode-info{"data-js": "show-tips-content"}
                        カードの裏面をご参照ください。
                        %br/
                        %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?2561606804", :width => "240"}/
              %input#user_id{name:"user_id",type: "hidden", value:"885557553"}
              %input#encrypted_card_data{name: "encrypted_card_data",type: "hidden"}
              %p#primary-error.has-error-text
              %input{name: "after_save_callback", type: "hidden", value: ""}
                #card_token
                = submit_tag "追加する", id: "token_submit", class:"#submit-button btn-default btn-red"
= render "shared/main-footer"