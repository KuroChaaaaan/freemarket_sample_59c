.main-box
  .main-box__category
    .main-box__category__bar
      .main-box__category__bar__title
        レディース新着アイテム
      .main-box__category__bar__link      
        =link_to "#", class: "more-detail-link" do
          もっと見る
          %i.fa.fa-chevron-right

    .main-box__category__content
      .main-box__category__content__grid
        - @ladies_items.each do |ladiesItem|
          =link_to "/items/#{ladiesItem.id}" do
            .box
              .price ¥ #{ladiesItem.price.to_s(:delimited)}
              =image_tag ladiesItem.images[0].image.url, class: "image-box"
              
              .title-text #{ladiesItem.description}
