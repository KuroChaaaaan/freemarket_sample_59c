.main-box
  .main-box__category
    .main-box__category__bar
      .main-box__category__bar__title
        レディース新着アイテム
      .main-box__category__bar__link
        =link_to "#", class: "more-detail-link" do
          もっと見る
          %i.fa.fa-chevron-right

    .main-box__category__content
      .main-box__category__content__grid
        - @ladies_items.each do |ladies_item|
          -# =link_to "/items/#{ladiesItem.id}" do
          =link_to "items/#{ladies_item.id}" do
            .box
              - unless ladies_item.listing?
                .item-sold-badge
                .soldtext
                  SOLD
              .price ¥ #{ladies_item.price.to_s(:delimited)}
              =image_tag ladies_item.images[0].image.url, class: "image-box"
              
              .title-text #{ladies_item.description}
