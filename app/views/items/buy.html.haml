.buy-confirmation
  %section
    %h2.buy-confirmation__head
      購入品の確認
    %section.buy-confirmation__item
      .buy-confirmation__item__inner
        %h3
          = image_tag 'nori.jpg', size: '60x60', class: ''
        %p.buy-confirmation__item__inner__name ケース
        %form.buy-form
          %p.buy-form__name ¥330
          %ul.buy-form__point
            %li
              .buy-form__point__none
                ポイントがありません
          %ul.buy-form__money
            %li
              .buy-form__money__cell
                支払金額
              .buy-form__money__cell
                %span
                  ¥330
                  -# 送料の表記をする
          %p.has-error-text
            配送方法と支払い方法を入力してください
          = form_tag(action: :pay, method: :post) do
            .buy-form__point__none
              %button.input-default 購入する
          
    .buy-confirmation__borders
      %section.user-address
        .user-address__inner
          %h3
            配送先
          %address.user-address__inner__content
            〒277-0863
            %br
            千葉県 柏市豊四季 333-12
            %br
            山田 裕一
          = link_to  root_path,  class: 'user-address__inner__change' do
            %span
              変更する
            = fa_icon 'fas fa-angle-right', class: "fa-angle-right"

    %section.user-address.card
      .user-address__inner
        %h3.credit-head
          支払い方法
          - if @default_card_information.blank?
            %br
          - else
            = "**** **** **** " + "#{@default_card_information.last4}"
            - exp_month = "#{@default_card_information.exp_month.to_s}"
            - exp_year = "#{@default_card_information.exp_year.to_s.slice(2,3)}"
            = exp_month + " / " + "#{exp_year}"
          %br
          = form_tag(action: :pay, method: :post) do
            .buy-form__point__none
              %button.input-default 購入する
        %p
          = link_to new_card_path,  class: 'user-address__inner__change' do
            %span
              変更する
            = fa_icon 'fas fa-angle-right', class: "fa-angle-right"