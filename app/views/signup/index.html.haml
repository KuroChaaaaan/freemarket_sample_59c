%main.single-main
  %section.l-single-container
    %h2.l-single-head.registration
      新規会員登録
    .l-single-inner.registration-form
      .l-single-content
        .button-default.red
          = link_to profile_signup_index_path,class:"red" do
            = fa_icon 'envelope', class:"m-icon"
            %p メールアドレスで登録する
        .button-default.blue
          = link_to "https://www.facebook.com/", class: "blue" do
            = fa_icon 'facebook-square', class:"f-icon"
            %p Facebookで登録する
        .button-default.white
          = link_to "https://accounts.google.com/", class:"g-link" do
            = fa_icon 'google', class:"g-icon"
            %p Googleで登録する