%main.single-main
  %section.l-single-container
    %h2.l-single-head.registration
      新規会員登録
    .l-single-inner.registration-form
      .l-single-content
        .button-default.red
          = link_to profile_path,class:"red" do
            = fa_icon 'envelope', class:"m-icon"
            %p メールアドレスで登録する
        .button-default.blue
          = link_to user_facebook_omniauth_authorize_path, class: "blue" do
            = fa_icon 'facebook-square', class:"f-icon"
            %p Facebookで登録する
        .button-default.white
          = link_to user_google_oauth2_omniauth_authorize_path, class:"g-link" do
            = fa_icon 'google', class:"g-icon"
            %p Googleで登録する