      .login-form-inner-ex
        .form-group
          = f.text_field :email, placeholder:"メールアドレス", class:".login-input-text input-default"
        .form-group
          = f.text_field :password, placeholder:"パスワード", class:".login-input-text input-default"
        .form-group
        = f.submit "ログイン", class:"login-submit btn-default btn-red"
